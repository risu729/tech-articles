{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [
		"@tsconfig/bun/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true
	},
	// override to include js files
	"include": [
		"**/*.js",
		"**/*.mjs",
		"**/*.cjs",
		"**/*.ts",
		"**/*.mts",
		"**/*.cts",
		// include dot files
		// ref: https://github.com/microsoft/TypeScript/issues/49555
		".**/*.js",
		".**.mjs",
		".**.cjs",
		".**.ts",
		".**.mts",
		".**.cts"
	]
}
